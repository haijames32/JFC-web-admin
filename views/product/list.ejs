<%- include('../includes/header.ejs') %>


   <div class="container col-8">
      <div class="d-flex mb-3">
         <div class="container d-flex align-items-center" style="justify-content: space-between;">
            <div class="d-flex">
               <div class="form-check col-4 mt-2">
                  <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
                  <label class="form-check-label" for="flexCheckDefault">Chọn tất cả</label>
               </div>
               <div class="col-6">
                  <select class="form-select ms-2" aria-label="Default select example">
                     <option value="" selected>Chọn hành động</option>
                     <option value="delete">Xóa</option>
                  </select>
               </div>
               <button type="button" class="btn btn-primary ms-3" data-mdb-ripple-init>OK</button>
            </div>

            <div class="d-flex">
               <div class="me-3">
                  <div class="input-group">
                     <div class="form-outline" data-mdb-input-init>
                        <input type="search" id="form1" class="form-control" />
                        <label class="form-label" for="form1">Search</label>
                     </div>
                     <button type="button" class="btn btn-primary" data-mdb-ripple-init>
                        <i class="fas fa-search"></i>
                     </button>
                  </div>
               </div>
               <button type="button" class="btn text-white btn-primary" data-mdb-ripple-init data-mdb-modal-init
                  data-mdb-target="#modalAddProduct">
                  <i class="fas fa-plus"></i>
               </button>
            </div>
         </div>
      </div>

      <!-- Modal Add -->
      <div class="modal fade" id="modalAddProduct" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
         <div class="modal-dialog">
            <div class="modal-content">
               <form method="post" action="" enctype="multipart/form-data">
                  <div class="modal-header">
                     <h5 class="modal-title" id="exampleModalLabel">Add Product</h5>
                     <button type="button" class="btn-close" data-mdb-ripple-init data-mdb-dismiss="modal"
                        aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                     <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" id="form3Example3" class="form-control" name="name" required />
                        <label class="form-label" for="form3Example3">Name</label>
                     </div>
                     <div class="row mb-4">
                        <div class="col-7">
                           <div data-mdb-input-init class="form-outline">
                              <input type="number" id="form3Example1" class="form-control" name="price" required />
                              <label class="form-label" for="form3Example1">Price</label>
                           </div>
                        </div>
                        <div class="col-5">
                           <select class="form-select" aria-label="Default select example" name="category" required>
                              <option value="" selected>Loại sản phẩm</option>
                              <% listCate.forEach(item=> { %>
                                 <option value="<%= item._id %>">
                                    <%= item.name %>
                                 </option>
                                 <% }) %>
                           </select>
                        </div>
                     </div>
                     <div class="col">
                        <input class="mb-4" type="file" class="form-control" id="customFile" name="post_img_file"
                           required />
                     </div>
                     <div data-mdb-input-init class="form-outline mb-4">
                        <textarea class="form-control" id="form4Example3" rows="4" name="description"></textarea>
                        <label class="form-label" for="form4Example3">Description</label>
                     </div>
                  </div>
                  <div class="modal-footer">
                     <button type="button" class="btn btn-secondary" data-mdb-ripple-init
                        data-mdb-dismiss="modal">Close</button>
                     <button type="submit" class="btn btn-primary" data-mdb-ripple-init>Create</button>
                  </div>
               </form>
            </div>
         </div>
      </div>

      <table class="table align-middle mb-0 bg-white" style="font-family: cursive">
         <thead class="bg-light">
            <tr class="table-danger">
               <th></th>
               <th></th>
               <th>Name</th>
               <th>Price</th>
               <th>Category</th>
               <th></th>
            </tr>
         </thead>
         <tbody>
            <% listProd.forEach(item=>{ %>
               <tr>
                  <td>
                     <div>
                        <input class="form-check-input" type="checkbox" id="checkboxNoLabel2" value="" aria-label="" />
                     </div>
                  </td>
                  <td>
                     <div class="align-items-center">
                        <img src="<%= item.image %>" class="rounded" alt="" style="width: 45px; height: 45px" />
                     </div>
                  </td>
                  <td>
                     <p class="fw-normal">
                        <%= item.name %>
                     </p>
                  </td>
                  <td>
                     <p class="fw-normal">
                        <%= item.price.toLocaleString() %>₫
                     </p>
                  </td>
                  <td>
                     <p class="fw-normal">
                        <%= item.category.name %>
                     </p>
                  </td>
                  <td>
                     <a class="btn text-white btn-sm btn-floating bg-primary" data-mdb-ripple-init href="#!"
                        role="button">
                        <i class="fas fa-pen"></i>
                     </a>
                     <a class="btn text-white btn-sm btn-floating" data-mdb-ripple-init data-mdb-modal-init
                        data-mdb-target="#modalDelete" style="background-color: #c61118;">
                        <i class="fas fa-trash"></i>
                     </a>
                  </td>
               </tr>
               <%}) %>
         </tbody>
      </table>
      <% if(listProd.length==0){ %>
         <div class="text-center mt-3">
            <h5 class="fw-semibold">Chưa có sản phẩm nào..</h5>

         </div>
         <% } %>
   </div>

   <!-- Modal Delete -->
   <div class="modal fade" id="modalDelete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
         <div class="modal-content">
            <div class="modal-header">
               <h5 class="modal-title" id="exampleModalLabel">Delete Product?</h5>
               <button type="button" class="btn-close" data-mdb-ripple-init data-mdb-dismiss="modal"
                  aria-label="Close"></button>
            </div>
            <div class="modal-body">Do you want to delete the product to the trash?</div>
            <div class="modal-footer">
               <button type="button" class="btn btn-primary" data-mdb-ripple-init data-mdb-dismiss="modal">
                  Close
               </button>
               <button type="button" class="btn btn-danger" id="btnDeleteUserModal" data-mdb-ripple-init>Move to
                  trash</button>
            </div>
         </div>
      </div>
   </div>


   <script>
      document.addEventListener('DOMContentLoaded', () => {

      })
   </script>


   <%- include('../includes/footer.ejs') %>