   <div class="container col-8" style="margin-top: 100px;">
      <div class="d-flex mb-3">
         <div class="container d-flex align-items-center" style="justify-content: space-between;">
            <div class="d-flex col">
               <div class="form-check mt-2" style="width: 110px;">
                  <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
                  <label class="form-check-label" for="flexCheckDefault">Chọn tất cả</label>
               </div>
               <div class="col-3">
                  <select class="form-select ms-2" aria-label="Default select example">
                     <option value="" selected>Chọn hành động</option>
                     <option value="delete">Xóa</option>
                  </select>
               </div>
               <button type="button" class="btn btn-primary ms-3" data-mdb-ripple-init>OK</button>
               <form method="get" action="" class="d-flex">
                  <div>
                     <select class="form-select ms-2" aria-label="Default select example" name="filterCate" required>
                        <option value="" selected>Thể loại</option>
                        <% listCate.forEach(item=>{ %>
                           <option value="<%= item._id %>">
                              <%= item.name %>
                           </option>
                           <% }) %>
                     </select>
                  </div>
                  <button type="submit" class="btn btn-primary ms-3" data-mdb-ripple-init>OK</button>
               </form>
            </div>

            <div class="d-flex">
               <div class="me-3">
                  <div class="input-group">
                     <form class="d-flex" action="" method="get">
                        <div class="form-outline" data-mdb-input-init>
                           <input type="search" id="form1" class="form-control" style="width: 170px;"
                              name="searchName" />
                           <label class="form-label" for="form1">Search</label>
                        </div>
                        <button type="submit" class="btn btn-primary" data-mdb-ripple-init>
                           <i class="fas fa-search"></i>
                        </button>
                     </form>
                  </div>
               </div>
               <button type="button" class="btn text-white btn-primary" data-mdb-ripple-init data-mdb-modal-init
                  data-mdb-target="#modalAddProduct">
                  <i class="fas fa-plus"></i>
               </button>
            </div>
         </div>
      </div>

      <!-- Modal Add Product -->
      <%- include('./includes/modalAdd.ejs') %>


         <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
               <tr class="table-danger">
                  <th></th>
                  <th>Image</th>
                  <th>Name</th>
                  <th>Price</th>
                  <th>Category</th>
                  <th>Actions</th>
               </tr>
            </thead>
            <tbody>
               <% listProd.forEach(item=>{ %>
                  <tr>
                     <td>
                        <div>
                           <input class="form-check-input" type="checkbox" id="checkboxNoLabel2" value=""
                              aria-label="" />
                        </div>
                     </td>
                     <td>
                        <div class="align-items-center">
                           <img src="<%= item.image %>" class="rounded" alt="" style="width: 45px; height: 45px" />
                        </div>
                     </td>
                     <td>
                        <p class="fw-normal">
                           <%= item.name %>
                        </p>
                     </td>
                     <td>
                        <p class="fw-normal">
                           <%= item.price.toLocaleString() %>₫
                        </p>
                     </td>
                     <td>
                        <p class="fw-normal">
                           <%= item.category.name %>
                        </p>
                     </td>
                     <td>
                        <a class="btn text-white btn-sm btn-floating bg-primary" href="/products/<%= item._id %>/edit"
                           data-mdb-ripple-init>
                           <i class="fas fa-pen"></i>
                        </a>
                        <a class="btn text-white btn-sm btn-floating" data-mdb-ripple-init data-mdb-modal-init
                           data-mdb-id="<%= item._id %>" data-mdb-target="#modalDelete"
                           style="background-color: #c61118;">
                           <i class="fas fa-trash"></i>
                        </a>
                     </td>
                  </tr>
                  <%}) %>
            </tbody>
         </table>
         <% if(listProd.length==0){ %>
            <div class="text-center mt-3">
               <h5 class="fw-semibold">Chưa có sản phẩm nào..</h5>
            </div>
            <% } %>
   </div>

   <!-- Modal Delete to Trash Product -->
   <%- include('./includes/modalDelete.ejs') %>

      <!-- Form Delete Product to trash -->
      <form method="post" name="deleteForm"></form>

      <script>
         // Code Delete Product to Trash
         document.addEventListener('DOMContentLoaded', () => {
            const modalDelete = document.getElementById('modalDelete');
            let productId
            let deleteForm = document.forms['deleteForm']

            // Event show modal DELETE
            modalDelete.addEventListener('show.mdb.modal', (e) => {
               const button = e.relatedTarget;
               productId = button.getAttribute('data-mdb-id');
            })

            const btnDelete = document.getElementById('btnDeleteProductModal')
            // Click DELETE in Modal delete
            btnDelete.onclick = function () {
               deleteForm.action = `/products/${productId}?_method=DELETE`
               deleteForm.submit()
            }



         })
      </script>


